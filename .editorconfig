# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Go files use tabs for indentation
[*.go]
indent_style = tab
indent_size = 4

# YAML files use spaces
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files use spaces
[*.json]
indent_style = space
indent_size = 2

# Markdown files allow trailing whitespace (for line breaks)
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Makefile must use tabs
[Makefile]
indent_style = tab
